---
import BaseHead from "../components/BaseHead.astro";

interface Props {
	title?: string;
}

const { title } = Astro.props;
---

<html lang="es">
	<head>
		<BaseHead title={title} />
	</head>
	<body>
		<slot />
	</body>
</html>

<script>
	import "../styles/global.css";
</script>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: "Lato", sans-serif;
	}
</style>
